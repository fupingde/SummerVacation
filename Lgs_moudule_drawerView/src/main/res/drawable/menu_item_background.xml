<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态的背景颜色 -->
    <item android:state_pressed="true" android:drawable="@color/colorItemPressed" />
    <!-- 选中状态的背景颜色 -->
    <item android:state_checked="true" android:drawable="@color/colorItemChecked" />
    <!-- 默认状态的背景颜色 -->
    <item android:drawable="@color/colorItemDefault" />
</selector>
