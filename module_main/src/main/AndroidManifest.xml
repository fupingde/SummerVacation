<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SummerVacation">
        <activity
            android:name="com.example.module.SongNullActivity"
            android:exported="false" />
        <service
            android:name="com.example.module.ui.services.MusicService"
            android:exported="true" />

        <activity
            android:name="com.example.module.ui.activities.MusicPlayActivity"
            android:exported="false" />
        <activity
            android:name="com.example.module.ui.activities.SongListActivity"
            android:exported="false" />
        <activity
            android:name="com.example.module.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>


</manifest>